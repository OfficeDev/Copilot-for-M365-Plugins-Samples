{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "separator": true,
            "items": [
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "size": "large",
                                    "weight": "bolder",
                                    "text": "üì¶ ${title}",
                                    "wrap": true,
                                    "style": "heading"
                                }
                            ],
                            "width": "60"
                        }
                    ]
                }
            ],
            "bleed": true
        },
        {
            "type": "Container",
            "style": "emphasis",
            "items": [
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "**üìçOwner information**",
                    "wrap": true,
                    "size": "Medium",
                    "isSubtle": false
                },
                {
                    "type": "ColumnSet",
                    "separator": true,
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "spacing": "Large",
                                    "facts": [
                                        {
                                            "title": "Name:",
                                            "value": "${ownerName}"
                                        }
                                    ],
                                    "separator": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "**üõí Classified listing information**",
                    "wrap": true,
                    "size": "Medium",
                    "isSubtle": false
                },
                {
                    "type": "ColumnSet",
                    "separator": true,
                    "columns": [
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "spacing": "Large",
                                    "facts": [
                                        {
                                            "title": "Type:",
                                            "value": "${typeName}"
                                        },
                                        {
                                            "title": "Price:",
                                            "value": "${price}"
                                        }
                                    ],
                                    "separator": true
                                }
                            ]
                        },
                        {
                            "type": "Column",
                            "width": "stretch",
                            "items": [
                                {
                                    "type": "FactSet",
                                    "spacing": "Large",
                                    "facts": [
                                        {
                                            "title": "Location:",
                                            "value": "${cityName}"
                                        },
                                        {
                                            "title": "Posted on:",
                                            "value": "${timestamp}"
                                        }
                                    ],
                                    "separator": true
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "TextBlock",
                    "weight": "Bolder",
                    "text": "${description}",
                    "wrap": true,
                    "isSubtle": false
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.ShowCard",
                            "title": "‚ûï Add New Listing",
                            "card": {
                                "type": "AdaptiveCard",
                                "body": [
                                    {
                                        "type": "Input.Text",
                                        "id": "txtTitle",
                                        "label": "Title",
                                        "isRequired": true,
                                        "errorMessage": "Title is required",
                                        "style": "Tel"
                                    },
                                    {
                                        "type": "Input.Text",
                                        "id": "txtDescription",
                                        "label": "Description",
                                        "isRequired": true,
                                        "errorMessage": "Description is required",
                                        "isMultiline": true,
                                        "style": "Tel"
                                    },
                                    {
                                        "type": "Input.Text",
                                        "id": "txtPrice",
                                        "label": "Price",
                                        "min": 0,
                                        "max": 9999999999,
                                        "errorMessage": "Invalid input, use whole positive number",
                                        "isRequired": true,
                                        "style": "Tel"
                                    },
                                    {
                                        "type": "Input.ChoiceSet",
                                        "id": "txtCity",
                                        "style": "compact",
                                        "label": "City",
                                        "isMultiSelect": false,
                                        "value": "1",
                                        "choices": "${cityChoices}",
                                        "isRequired": true
                                    },
                                    {
                                        "type": "Input.ChoiceSet",
                                        "id": "txtType",
                                        "style": "compact",
                                        "label": "Type",
                                        "isMultiSelect": false,
                                        "value": "1",
                                        "choices": "${typeChoices}",
                                        "isRequired": true
                                    }
                                ],
                                "actions": [
                                    {
                                        "type": "Action.Execute",
                                        "title": "‚úÖ Post listing",
                                        "verb": "addClassifiedItem"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "Action.Execute",
                            "title": "‚ùå Delete",
                            "verb": "deleteClassifiedItem",
                            "data": {
                                "listingId": "${listingId}"
                            }
                        }
                    ]
                }
            ]
        }
    ]
}